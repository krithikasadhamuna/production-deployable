# CodeGrey SOC Server - Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
SOC_HOST=0.0.0.0
SOC_PORT=8443
SOC_DEBUG=false

# Security
SOC_SECRET_KEY=your-production-secret-key-change-this-to-random-string

# Database
SOC_DATABASE_PATH=database/soc_production.db

# Logging
SOC_LOG_LEVEL=INFO
SOC_LOG_FILE=logs/soc_server.log

# Multi-tenant Limits
SOC_MAX_AGENTS_PER_TENANT=100
SOC_MAX_COMMANDS_PER_MINUTE=60

# API Rate Limiting
SOC_API_RATE_LIMIT=1000 per hour

# Optional: SSL/TLS Configuration
# SOC_SSL_CERT_PATH=ssl/server.crt
# SOC_SSL_KEY_PATH=ssl/server.key


