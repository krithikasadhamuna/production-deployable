    "network_topology": {
      "method": "GET",
      "url": "/network-topology",
      "parameters": {
        "hierarchy": "desc|asc (optional, default: desc)"
      },
      "description": "Get network topology in tabular format with hierarchy support",
      "example_url": "/network-topology?hierarchy=desc",
      "response_structure": {
        "nodes": [
