        }
      },
      "approve_attack": {
        "method": "POST",
        "url": "/langgraph/attack/{scenario_id}/approve",
        "description": "Approve and execute attack scenario",
        "response": {
          "success": true,
          "message": "Attack execution started",
          "golden_images_created": 4,
